generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               String         @id @default(cuid())
  email            String         @unique
  passwordHash     String
  isPro            Boolean        @default(false)
  subscriptionTier String         @default("FREE")
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  profile          UserProfile?
  dietPlans        DietPlan[]
  workoutPlans     WorkoutPlan[]
  aiMessages       AiMessage[]
  mealLogs         MealLog[]
  exerciseLogs     ExerciseLog[]
  shoppingItems    ShoppingItem[]

  @@map("app_users")
}

model UserProfile {
  id              Int      @id @default(autoincrement())
  userId          String   @unique
  gender          String
  ageYrs          Int
  heightCm        Float
  weightKg        Float
  targetWeightKg  Float
  goals           Json
  workoutLocations Json
  diets           Json
  allergies       Json
  activityLevel   String
  mealsPerDay     Int      @default(3)
  macroVelocity   String   @default("AI_RECOMMENDED")
  proteinG        Int      @default(0)
  carbsG          Int      @default(0)
  fatG            Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("app_user_profiles")
}

model DietPlan {
  id            Int      @id @default(autoincrement())
  userId        String
  summary       String   @db.Text
  planJson      Json
  sourceMessage String   @db.Text
  mcpChanges    Json?
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("app_diet_plans")
}

model WorkoutPlan {
  id            Int      @id @default(autoincrement())
  userId        String
  summary       String   @db.Text
  planJson      Json
  sourceMessage String   @db.Text
  mcpChanges    Json?
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("app_workout_plans")
}

model AiMessage {
  id                Int      @id @default(autoincrement())
  userId            String
  planType          String
  userMessage       String   @db.Text
  aiResponseSummary String   @db.Text
  mcpChanges        Json?
  createdAt         DateTime @default(now())
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, planType, createdAt])
  @@map("app_ai_messages")
}

model MealLog {
  id            Int      @id @default(autoincrement())
  userId        String
  date          DateTime @db.Date
  mealType      String
  name          String
  recipeId      Int?
  simpleFoodIds Json?
  calories      Float    @default(0)
  proteinG      Float    @default(0)
  carbsG        Float    @default(0)
  fatG          Float    @default(0)
  ingredients   Json?
  instructions  Json?
  eaten         Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@map("app_meal_logs")
}

model ExerciseLog {
  id          Int      @id @default(autoincrement())
  userId      String
  date        DateTime @db.Date
  weekday     String
  name        String
  exerciseId  Int?
  sets        String?
  notes       String?
  durationMin Int?
  intensity   String?
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@map("app_exercise_logs")
}

model ShoppingItem {
  id        Int      @id @default(autoincrement())
  userId    String
  name      String
  qty       String
  category  String
  checked   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, category])
  @@map("app_shopping_items")
}
